<?xml version="1.0" encoding="utf-8"?>
<!--suppress LongLine -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/profileUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Username:"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Email:"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/profileskillPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Skill Points:"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/profilePilotPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="20dp"
            android:text="Pilot Points:"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        <TextView
            android:id="@+id/profileFighterPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="20dp"
            android:text="Fighter Points:"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        <TextView
            android:id="@+id/profileTraderPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="20dp"
            android:text="Trader Points:"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        <TextView
            android:id="@+id/profileEngineerPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="20dp"
            android:text="Engineer Points:"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/profileAvailableFuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Available Fuel:"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="193dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/profileCurrentPlanet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Current Planet"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="193dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/profileCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Current Location:"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="193dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>